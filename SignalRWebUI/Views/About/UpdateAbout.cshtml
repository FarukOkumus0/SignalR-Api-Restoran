@model UpdateAboutDto

@{
	ViewData["Title"] = "UpdateAbout";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımızda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Hakkımızda Metin Güncelleme Girişi</div>
						</div>
						<input type="hidden" asp-for="AboutID" />
						<div class="card-body">
							<div class="form-group">
								<label for="Title">Başlığı Girin</label>
								<input type="text" class="form-control" asp-for="Title" id="Title">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="ImageUrl">Görsel Url'ini Girin</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Description">Açıklamayı Girin</label>
								<textarea rows="5" class="form-control" asp-for="Description" id="Description"></textarea>
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary">Hakkımızda Metnini Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>

